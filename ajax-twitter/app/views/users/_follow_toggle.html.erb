<% is_following = current_user.follows?(user) %>

<form action="<%= user_follow_url(user) %>" method="POST">
  <%= render "shared/auth_token" %>

  <% if is_following %>
    <input type="hidden" name="_method" value="DELETE">
  <% end %>
  
  <button
    class="follow-toggle" data-user-id= <%= current_user.id %> data-follow-state= <% if value=="Unfollow!"? "followed" : "unfollowed"  %>
  >
    <%= is_following ?  : "Follow!" %>
  </button>
</form>

